<script>
    document.addEventListener('DOMContentLoaded', function () {
        const button = document.getElementById('fetchDogImageButton');
        const dogImage = document.getElementById('dogImage');

        button.addEventListener('click', function () {
            fetch('https://dog.ceo/api/breeds/image/random')
                .then(response => response.json()) // 將響應轉換為 JSON
                .then(data => {
                    // 顯示隨機狗狗圖片
                    dogImage.src = data.message;
                    dogImage.alt = '隨機狗狗圖片'; // Update alt text
                    dogImage.style.display = 'block'; // Show the image
                })
                .catch(error => {
                    // 錯誤處理
                    console.error('獲取狗狗圖片失敗:', error);
                    dogImage.src = '';
                    dogImage.alt = '獲取狗狗圖片失敗';
                    dogImage.style.display = 'none'; // Hide the image if there's an error
                });
        });
    });
