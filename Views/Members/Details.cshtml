@model D05Project.Models.Member

@{
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            padding-top: 20px;
            background-color: #f8f9fa;
        }

        .container {
            max-width: 900px;
            margin: 0 auto;
        }

        h1, h2, h4 {
            margin-bottom: 20px;
        }

        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

        .card-header {
            background-color: antiquewhite;
            color: black;
            font-size: 1.5rem;
        }

        .btn-custom {
            background-color: antiquewhite;
            color: black;
            border-radius: 20px;
        }

            .btn-custom:hover {
                background-color: linen;
                color: black;
            }

        .btn-link {
            color: #007bff;
            text-decoration: none;
        }

            .btn-link:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h4 style="text-align:center">會員資料</h4>
            </div>
            <div class="card-body">
                <h2>我的購物車🛒</h2>
                <a href="http://localhost:5230/cartindex2.html" class="btn btn-custom">🛒進入我的購物車</a>
                <hr />
                <dl class="row">
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.MemName)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.MemName)
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.MemTel)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.MemTel)
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.MemEmail)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.MemEmail)
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.MemBirth)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.MemBirth)
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Memaddress)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Memaddress)
                    </dd>
                 
                  
                </dl>
            </div>
            <div class="card-footer text-right">
                <a asp-action="Edit" asp-route-id="@Model?.MemId" class="btn btn-outline-primary">修改個人資料</a>
                <a href="http://localhost:5230/MainPage/Create" class="btn btn-outline-secondary">回首頁</a>
                @* <a asp-action="Index" class="btn btn-outline-dark">Back to List</a> *@
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
 
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>