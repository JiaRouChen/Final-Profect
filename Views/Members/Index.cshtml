@model             IEnumerable<D05Project.Models.Member>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<style>
    #menu {
        width: 250px;
        background-color: #333;
        color: white;
        position: fixed;
        left: 0;
        top: 0;
        height: 100%;
        transform: translateX(-100%);
        transition: transform 0.3s ease;
        padding: 20px;
        z-index: 1000;
    }

        #menu a {
            color: white;
            text-decoration: none;
            display: block;
            padding: 10px;
            font-size: 18px;
        }

            #menu a:hover {
                background-color: #575757;
            }

    #menuButton {
        position: fixed;
        left: 20px;
        top: 0px;
        background-color: #333;
        color: white;
        border: none;
        padding: 0px;
        border-radius: 5px;
        cursor: pointer;
        z-index: 1001;
        font-size: 50px;
    }

    #menu.show {
        transform: translateX(0);
    }
</style>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MemId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MemName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MemTel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MemEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MemBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Memaddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Memgender)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MemId)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.MemName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MemTel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MemEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MemBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Memaddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Memgender)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MemId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MemId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MemId">Delete</a>
            </td>
        </tr>
}

        <button id="menuButton">☰</button>

        <div id="menu">
            <br><br>
