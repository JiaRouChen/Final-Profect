@model             IEnumerable<D05Project.Models.ProcurmentSheet>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f4f4;
    }

    #menu {
        width: 250px;
        background-color: #222;
        color: white;
        position: fixed;
        left: 0;
        top: 0;
        height: 100%;
        transform: translateX(-100%);
        transition: transform 0.3s ease, background-color 0.3s ease;
        padding: 20px;
        z-index: 1000;
    }

        #menu a {
            color: white;
            text-decoration: none;
            display: block;
            padding: 10px;
            font-size: 18px;
            border-radius: 4px;
            transition: background-color 0.3s ease;
        }

            #menu a:hover {
                background-color: #575757;
            }

    #menuButton {
        position: fixed;
        left: 20px;
        top: 20px;
        background-color: #333;
        color: white;
        border: none;
        padding: 15px;
        border-radius: 5px;
        cursor: pointer;
        z-index: 1001;
        font-size: 30px;
        transition: background-color 0.3s ease;
    }

        #menuButton:hover {
            background-color: #555;
        }

    #menu.show {
        transform: translateX(0);
    }

    .table {
        width: 100%;
        max-width: 1200px;
        margin: 20px auto;
        border-collapse: collapse;
    }

        .table thead {
            background-color: antiquewhite;
            color: black;
        }

        .table th, .table td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid lightyellow;
        }

        .table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .table tr:hover {
            background-color: #f1f1f1;
        }

    .sbtn {
        display: inline-block;
        padding: 10px 20px;
        margin: 10px 0;
        border: none;
        border-radius: 5px;
        background-color: antiquewhite;
        color: black;
        text-decoration: none;
        font-size: 16px;
        transition: background-color 0.3s ease;
        
    }

        .sbtn:hover {
            background-color: pink;
        }
</style>
<p>
    <a class="sbtn" asp-action="Create">新增</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.pNo)</th>
            <th>@Html.DisplayNameFor(model => model.pDate)</th>
            <th>@Html.DisplayNameFor(model => model.pNote)</th>
            <th>@Html.DisplayNameFor(model => model.aIdNavigation)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.pNo)</td>
                <td>@Html.DisplayFor(modelItem => item.pDate)</td>
                <td>@Html.DisplayFor(modelItem => item.pNote)</td>
                <td>@Html.DisplayFor(modelItem => item.aIdNavigation.aId)</td>
                <td>
                    <a class="sbtn" asp-action="Edit" asp-route-id="@item.pNo">Edit</a> |
                    <a class="sbtn" asp-action="Details" asp-route-id="@item.pNo">Details</a> |
                    <a class="sbtn" asp-action="Delete" asp-route-id="@item.pNo">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<button id="menuButton">☰</button>

<div id="menu">
    <br>
    <br>
    <br>
    <a href="http://localhost:5230/ProcurmentSheets/Index">入庫記錄查詢</a>
    <a href="http://localhost:5230/Stocksheets/Index">出庫記錄查詢</a>
    <a href="http://localhost:5230/Members/Index">會員管理</a>
    <a href="http://localhost:5230/Admins/Index">員工管理</a>
    <a href="http://localhost:5230/SysAdmins/Index">聯絡我們</a>
    <a href="http://localhost:5230/Products/Index">產品管理</a>
    <a href="http://localhost:5230/Orders/Index">訂單明細管理</a>
    <a href="http://localhost:5230/Suppliers/Index">供應商管理</a>
    <a href="http://localhost:5230/Categories/Index">商品種類維護</a>
    <a href="http://localhost:5230/Carts/Index">客戶直接下單紀錄</a>
    <a href="http://localhost:5230/BackEnd/Index">回後台首頁</a>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const menuButton = document.getElementById('menuButton');
        const menu = document.getElementById('menu');

        menuButton.addEventListener('click', function () {
            menu.classList.toggle('show');
        });
    });
</script>