<script>
    document.addEventListener('DOMContentLoaded', function () {
        const apiDataContainer = document.getElementById('apiDataContainer');

        // 发送 GET 请求到你的 ASP.NET Core API
        fetch('http://localhost:5161/api/Categories') // 替换为你的 API URL
            .then(response => {
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                return response.json();
            })
            .then(data => {
                if (data.length === 0) {
                    apiDataContainer.innerHTML = '<p>No data available.</p>';
                    return;
                }

                const itemsHtml = data.map(item => `
                            <div class="api-item">${item.catName}</div>
